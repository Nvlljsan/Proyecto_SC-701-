@model List<ProyectoGym.Models.Carrito>

<div class="container mt-4">
    <h2 class="text-center mb-4">Mi Carrito</h2>
    @if (Model != null && Model.Any())
    {
        <form asp-action="Vaciar" asp-controller="Carrito" method="post" class="mb-3">
            <input type="hidden" name="usuarioID" value="@ViewBag.UsuarioID" />
            <button type="submit" class="btn btn-danger">Vaciar Carrito</button>
        </form>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Precio</th>
                    <th>Subtotal</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NombreProducto</td>
                        <td>@item.Cantidad</td>
                        <td>$@item.Precio</td>
                        <td>$@item.Subtotal</td>
                        <td>
                            <form asp-action="Eliminar" asp-controller="Carrito" method="post">
                                <input type="hidden" name="carritoID" value="@item.CarritoID" />
                                <input type="hidden" name="usuarioID" value="@ViewBag.UsuarioID" />
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-end">
            <h4>Total: $@Model.Sum(i => i.Subtotal)</h4>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            No hay productos en el carrito.
        </div>
    }
</div>
