@model List<ProyectoGym.Models.Empleados>

<h2>Gestión de Empleados</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Puesto</th>
            <th>Fecha de Contratación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var empleado in Model)
        {
            <tr>
                <td>@empleado.Nombre</td>
                <td>@empleado.Apellido</td>
                <td>@empleado.Email</td>
                <td>@empleado.Telefono</td>
                <td>@empleado.Puesto</td>
                <td>@empleado.FechaContratacion.ToShortDateString()</td>
                <td>
                    <a asp-action="ModificarEmpleado" asp-route-id="@empleado.EmpleadoID" class="btn btn-warning">Modificar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="AgregarEmpleado" class="btn btn-primary">Agregar Empleado</a>
