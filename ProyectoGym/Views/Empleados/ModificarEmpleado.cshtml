@model ProyectoGym.Models.Empleados

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title text-center mb-0">Modificar Empleado</h2>
        </div>
        <div class="card-body">
            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-danger text-center">@ViewBag.Mensaje</div>
            }

            <form asp-action="ModificarEmpleado" method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="EmpleadoID" />
                <div class="mb-3">
                    <label for="Nombre" class="form-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" disabled />
                </div>
                <div class="mb-3">
                    <label for="Apellido" class="form-label">Apellido</label>
                    <input asp-for="Apellido" class="form-control" disabled />
                </div>
                <div class="mb-3">
                    <label for="Puesto" class="form-label">Puesto</label>
                    <input asp-for="Puesto" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label for="FechaContratacion" class="form-label">Fecha de Contratación</label>
                    <input asp-for="FechaContratacion" class="form-control" type="date" required />
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-save"></i> Guardar
                    </button>
                    <a asp-action="VistaEmpleados" class="btn btn-secondary">
                        <i class="fa fa-times"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
