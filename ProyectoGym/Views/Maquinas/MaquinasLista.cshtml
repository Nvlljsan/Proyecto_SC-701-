@model List<ProyectoGym.Models.Maquinas>

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title text-center mb-0">Lista de Máquinas</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="example" class="table table-bordered table-hover align-middle">
                    <thead class="table-primary text-center">
                        <tr>
                            <th>ID Máquina</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Ubicación</th>
                            <th>Estado</th>
                            <th>Configuraciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var maquina in Model)
                            {
                                <tr>
                                    <td>@maquina.MaquinaID</td>
                                    <td>@maquina.Nombre</td>
                                    <td>@maquina.Descripcion</td>
                                    <td>@maquina.Ubicacion</td>
                                    <td class="text-center">
                                        @if (maquina.Estado)
                                        {
                                            <span class="badge bg-success">Disponible</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">En Mantenimiento</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center gap-2">
                                            <a href="@Url.Action("MaquinasU", "Maquinas", new { MaquinaID = maquina.MaquinaID })" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">No se encontraron máquinas registradas.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
