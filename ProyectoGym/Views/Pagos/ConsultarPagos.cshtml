@model List<ProyectoGym.Models.PagosViewModel>

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title text-center mb-0">Consulta de Pagos</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-primary text-center">
                        <tr>
                            <th class="p-3">Usuario</th>
                            <th class="p-3">Monto</th>
                            <th class="p-3">Fecha del Pago</th>
                            <th class="p-3">Método de Pago</th>
                            <th class="p-3">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var pagos in Model)
                            {
                                <tr>
                                    <td class="p-3">@pagos.UsuarioNombre</td>
                                    <td class="p-3">@pagos.Monto.ToString("C")</td>
                                    <td class="p-3">@pagos.FechaPago.ToShortDateString()</td>
                                    <td class="p-3">@pagos.MetodoPago</td>
                                    <td class="p-3 text-center">
                                        <a asp-action="EliminarPago" asp-controller="Pagos" asp-route-id="@pagos.PagoID" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i> Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">No se encontraron pagos registrados.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="text-center mt-4">
                <a href="@Url.Action("RegistrarPago", "Pagos")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Registrar Nuevo Pago
                </a>
            </div>
        </div>
    </div>
</div>
