@model ProyectoGym.Models.Pagos

<h2>Registrar Pago</h2>

<form asp-action="InsertarPago" asp-controller="Pagos" method="post">
    <div class="form-group">
        <label for="UsuarioID">Usuario</label>
        <input asp-for="UsuarioID" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Monto">Monto</label>
        <input asp-for="Monto" type="number" step="0.01" class="form-control" />
    </div>
    <div class="form-group">
        <label for="FechaPago">Fecha</label>
        <input asp-for="FechaPago" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label for="MetodoPago">Método de Pago</label>
        <input asp-for="MetodoPago" class="form-control" />
    </div>
    <input type="submit" class="btn btn-primary" value="Procesar">
</form>
