
@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Recuperar Clave</h3></div>
                            <div class="card-body">
                                <div class="small mb-3 text-muted">Ingrese su correo electronico y le enviaremos una clave temproral.</div>
                                <form>
                                    <div class="form-floating mb-3">
                                        <input class="form-control" id="inputEmail" type="email" placeholder="name@example.com" />
                                        <label for="inputEmail">Correo Electronico</label>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                        <a class="small" href=@Url.Action("InicioSesion","Login")>Regresar a Inicio de Sesión</a>
                                        <a class="btn btn-primary" href="@Url.Action("Index","Home")">Solicitar Clave</a>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer text-center py-3">
                                <div class="small"><a href="@Url.Action("Registro","Login")">¿Necesitas una cuenta? ¡Regístrate!</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
   
</div>
