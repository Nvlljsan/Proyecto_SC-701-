@model List<ProyectoGym.Models.Productos>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-secondary text-center">@ViewBag.Mensaje</div>
}

<div class="row">

    @foreach (var producto in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
            <div class="card">
                <!-- Imagen del Producto -->
                <div class="text-center mt-3">
                    <img src="@producto.Imagen" class="card-img-top" alt="Imagen del producto" style="width:200px; height:175px; border-radius:2px;">
                </div>

                <!-- Detalles del Producto -->
                <div class="card-body text-center">
                    <h5 class="card-title">@producto.NombreProducto</h5>
                    <p class="card-text text-muted">@producto.Descripcion</p>
                    <p class="card-text"><strong>Precio:</strong> $@producto.Precio.ToString("N2")</p>
                </div>

                <!-- Opciones de Agregar al Carrito -->
                <div class="card-footer">
                    <div class="row">
                        <div class="col-6">
                            <input id="cantidad-@producto.ProductoID" type="number" class="form-control text-center" value="1" min="1" max="10" onkeypress="return false;">
                        </div>
                        <div class="col-6">
                            <button type="button" class="btn btn-primary w-100" onclick="AgregarAlCarrito(@producto.ProductoID);">Agregar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>

<script>
    function AgregarAlCarrito(productoID) {
        let cantidad = $(`#cantidad-${productoID}`).val();

        $.ajax({
            url: "/Carrito/AgregarAlCarrito",
            method: "POST",
            dataType: "json",
            data: {
                productoID : productoID,
                cantidad : cantidad
            },
