                }
            }
        });
    }

    function MostrarMensajeOK(texto)
    {
          Swal.fire({
            title: "Información",
            confirmButtonText: "Aceptar",
            text: texto,
            icon: "success"
          }).then((result) => {

            if (result.isConfirmed) {
              window.location.href = "/Productos/CatalogoProductos";
            }

          });
    }

    function MostrarMensaje(texto)
    {
